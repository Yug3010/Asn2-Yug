<!-- data.hbs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Data Page</title>
  <style>
    table {
      border-collapse: collapse;
      width: 100%;
    }
    th, td {
      border: 1px solid #dddddd;
      text-align: left;
      padding: 8px;
    }
    th {
      background-color: #f2f2f2;
    }
  </style>
</head>
<body>
  <h1>Data Page</h1>
  <table>
    <tbody>
      <tr>
        <th>Title</th>
        <th>Reviews</th>
      </tr>
      {{#each data}}
      {{#if this.reviews}}
      <tr>
        <td>{{this.title}}</td>
        <td>{{this.reviews}}</td>
      </tr>
      {{/if}}
      {{/each}}
    </tbody>
  </table>
</body>
</html>
